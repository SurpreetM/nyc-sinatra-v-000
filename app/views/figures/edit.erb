<h2>Edit Figure</h2>

<form action="/figures/<%=@figure.id%>" method="post">
  <input id="hidden" type="hidden" name="_method" value="patch">

  <label>Figure Name</label>
  <input type="text" name=figure[name] value="<%=@figure.name%>">

  <label>Figure Titles</label>
  <% @figure.titles.each do |title| %>
    <%= title.name %>
    <% end %>
    

  <input type="submit"  value="Edit Figure">
</form>
