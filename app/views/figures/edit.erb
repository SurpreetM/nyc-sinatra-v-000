<h2>Edit Figure</h2>

<form action="/figures/<%=@figure.id%>" method="post">
  <input id="hidden" type="hidden" name="_method" value="patch">

  <label>Figure Name</label>
  <input type="text" name=figure[name] value="<%=@figure.name%>">

  <h2><label>Figure Titles</label></h2>
  <% Title.all.each do |title| %>
  <input type="checkbox" name="figure[title_ids][]" id="title_<%=title.id%>" value="<%=title.id%>"
  <%='checked' if @figure.titles.include?(title) %>>
  <label><%= title.name %></label>
  <% end %>

  <h2><label>Create New Title</label></h2>
  <input type="text" name="title[name]" id="new_title">


  <input type="submit"  value="Edit Figure">
</form>
