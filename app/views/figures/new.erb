<h1> Create New Figure </h1>

<form action="/figures" method="post">

  <lable>Name</lable>
  <input type="text" name="figure[name]" id="figure_name">

  <h2><lable>Titles</lable></h2>
  <% Title.all.each do |title| %>
  <input type="radio" name="figure[title]" id="figure_title"><%= title.name %>
  <% end %>

  <h2><lable>Landmarks</lable></h2>
  <% Landmark.all.each do |landmark| %>
  <input type="radio" name="figure[landmark]" id="figure_landmark"><%= landmark.name %>
  <% end %>



</form>
